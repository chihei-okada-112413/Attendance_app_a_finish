<% provide(:title, "edit") %>
<div>
    <table class="table table-bordered table-condensed user-table" id="table-attendances">
        <thead>
            <tr>
                <th>日付</th>
                <th>曜日</th>
                <th>出社</th>
                <th>代謝</th>
                <th>在社時間</th>
                <th>備考</th>
                <th>残業指示</th>
                <th>指示者</th>
            </tr>
        </thead>
        
        <tbody>
            <% @attendances.each do |day| %>
            <tr>
                <td><%= l(day.worked_on, format: :short) %></td>
                <td><%= $days_of_the_week[day.worked_on.wday] %></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>