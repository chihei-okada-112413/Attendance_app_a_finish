<% provide(:title, @user.name) %>
<div>
    <table class="table table-bordered table-condensed user-table">
        <tr>
            <td>時間管理表</td>
            <td>指定勤務時間　<%= format_basic_info(@user.work_time) %></td>
            <td colspan="3">基本時間　<%= format_basic_info(@user.basic_time) %></td>
            <td>月初　<%= l(@first_day, format: :short) %></td>
        </tr>
        <tr>
            <td>所属　<%= @user.department? ? @user.department : "未所属" %></td>
            <td>氏名　<%= @user.name %></td>
            <td>コード</td>
            <td></td>
            <td>出勤日数</td>
            <td>締め　<%= l(@last_day, format: :short) %></td>
        </tr>
    </table>
</div>

<div class="btn-users-show">
    <%= link_to "⇦ 前月へ", user_path(date: @first_day.prev_month), class: "btn btn-info" %>
    <%= link_to "次月へ ⇨", user_path(date: @first_day.next_month), class: "btn btn-info" %>
</div>

<div class="">
    <%= link_to "勤怠を編集", "#", class: "btn btn-primary btn-attendance" %>
    </div>
<div>
    <table class="table table-bordered table-condensed user-table" id="table-attendances">
        <thead>
            <tr>
                <th rowspan="2">日付</th>
                <th rowspan="2">曜日</th>
                <th colspan="3">出勤時間</th>
                <th colspan="3">退勤時間</th>
                <th rowspan="2">在社時間</th>
                <th rowspan="2">備考</th>
            </tr>
            <tr>
                <th>時</th>
                <th>分</th>
                <th></th>
                <th>時</th>
                <th>分</th>
                <th></th>
            </tr>
        </thead>
        
        <tbody>
            <% @attendances.each do |day| %>
            <tr>
                <td><%= l(day.worked_on, format: :short) %></td>
                <td><%= $days_of_the_week[day.worked_on.wday] %></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                
                <td></td>
                <td></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
<h1><%= @user.name %>, <%= @user.email %></h1>