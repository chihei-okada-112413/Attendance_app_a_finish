<% provide(:title, 'Base point') %>
<h1>拠点一覧</h1>
<div class="col-md-12">
    <table class="table table-bordered table-condensed table-hover" id="table-base">
        <thead>
            <tr>
                <th colspan="2" width="40%"></th>
                <th>
                    <%#= User.human_attribute_name :name %>
                    拠点番号
                </th>
                <th>
                    拠点名
                </th>
                <th>
                    勤怠種類
                </th>
            </tr>
        </thead>
        
        <% @base_points.each do |base_point| %>
            <tr>
                <td><%= link_to "修正", edit_base_point_path(base_point), class: "btn btn-primary" %></td>
                <td><%= link_to "削除", base_point, method: :delete, data: { confirm: "拠点番号#{base_point.base_point_number}を削除してもよろしいですか？"}, class: "btn btn-primary" %><%#= base_point.id %></td>
                <td style="text-align:center;">
                    <%= base_point.base_point_number %>
                    <%# if current_user.admin? && !current_user?(user) %> <!-- | --> 
                        <%# link_to "基本情報編集", edit_basic_info_user_path(user) %> <!--| --> 
                        <%# link_to "削除" , user, method: :delete, data: { confirm: "削除してもよろしいですか？"} %>
                    <%# end %>
                </td>
                <td style="text-align:center;">
                    <%= base_point.base_point_name %>
                </td>
                <td style="text-align:center;">
                    <%= base_point.base_point_type %>
                </td>
            </tr>
        <% end %>
        </table>
        <table class="table table-bordered table-condensed table-hover" id="table-base">
        <tr>
        <td colspan="5">
        <%= link_to "拠点情報追加" , new_base_point_path, class: "btn btn-primary btn-lg" %>
        </td>
        </tr>
    </table>
</div>

